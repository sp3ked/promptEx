{
    "manifest_version": 3,
    "name": "Promptr",
    "version": "1.0",
    "description": "Manage and inject prompts for AI chat platforms.",
    "permissions": [
        "storage",
        "sidePanel",
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "*://chatgpt.com/*",
        "*://claude.ai/*",
        "*://grok.x.ai/*",
        "*://chat.deepseek.com/*",
        "*://gemini.google.com/*"
    ],
    "action": {
        "default_title": "Open Promptr"
    },
    "side_panel": {
        "default_path": "sidepanel.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "*://chatgpt.com/*",
                "*://claude.ai/*",
                "*://grok.x.ai/*",
                "*://chat.deepseek.com/*",
                "*://gemini.google.com/*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self';"
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}