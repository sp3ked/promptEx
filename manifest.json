{
    "manifest_version": 3,
    "name": "Promptr",
    "version": "1.0",
    "description": "A modern prompt management tool with a beautiful side panel interface",
    "permissions": [
        "sidePanel",
        "storage",
        "clipboardWrite"
    ],
    "action": {
        "default_title": "Promptr"
    },
    "side_panel": {
        "default_path": "sidepanel.js"
    },
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "16": "icons/icon.svg",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}