{
    "manifest_version": 3,
    "name": "Promptr",
    "version": "1.0",
    "description": "A modern prompt management tool with a beautiful side panel interface",
    "permissions": [
        "sidePanel",
        "storage",
        "clipboardWrite",
        "activeTab"
    ],
    "action": {
        "default_title": "Promptr"
    },
    "side_panel": {
        "default_path": "sidepanel.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.chatgpt.com/*",
                "*://*.chat.openai.com/*",
                "*://*.claude.ai/*",
                "*://*.grok.x.ai/*"
            ],
            "js": ["content.js"]
        }
    ],
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}